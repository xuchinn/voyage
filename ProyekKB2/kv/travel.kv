#:import Factory kivy.factory.Factory
#:import C kivy.utils.get_color_from_hex

<SpinnerOpt@SpinnerOption>:
    background_normal: ''
    background_color: [215/255.0, 189/255.0, 168/255.0, 255/255.0]
    color: [67/255.0, 104/255.0, 143/255.0, 255/255.0]
    font_size: "14.5sp"
    font_name: "RPoppins"
    box_radius: [0, 0, 24, 24]

<Travel>:
    MDFloatLayout:
        md_bg_color: C("#143F6B")
        orientation: 'vertical'
    FitImage:
        source: "./kv/voyage_logo.png"
        size_hint: (None, None)
        width: 60
        height: 60
        pos_hint: {'center_x': 0.9,'center_y': 0.945}
    MDLabel:
        text: "Welcome Back!"
        pos_hint: {'center_x': 0.78,'center_y': 0.87}
        font_name: "BPoppins"
        font_size: "17sp"
        color: [1,1,1,1]
    MDLabel:
        text: "User123"
        pos_hint: {'center_x': 0.78,'center_y': 0.84}
        font_name: "RPoppins"
        font_size: "14sp"
        color: [1,1,1,1]
    MDFillRoundFlatButton:
        text: "Search"
        pos_hint: {'center_x': 0.5,'center_y': 0.13}
        md_bg_color: C("#F55353")
        size_hint: 0.5, 0.07
        font_name: "BPoppins"
        font_size: "17sp"
        on_release: root.createObj()
        on_release: root.manager.current='hasil'

    FitImage:
        source: "kv/seojoon.jpeg"
        radius: 36, 36, 36, 36
        size_hint: (None, None)
        width: 65
        height: 65
        pos_hint: {'center_x': 0.13,'center_y': 0.855}
    MDLabel:
        text: "Origin"
        font_name: "MPoppins"
        pos_hint: {'center_x': 0.68,'center_y': 0.32}
        color: 1,1,1,1
    MDLabel:
        text: "Destination"
        font_name: "MPoppins"
        pos_hint: {'center_x': 1.115,'center_y': 0.32}
        color: 1,1,1,1
    Spinner:
        id : spinner_opt1
        text: 'Select A City'
        values: ('Medan', 'Padang', 'Batam', 'Palembang', 'Jakarta', 'Yogyakarta', 'Bali', 'Bima', 'Kupang','Pontianak', 'Banjarmasin', 'Palangkaraya', 'Surabaya', 'Tarakan', 'Palu', 'Manado', 'Makassar', 'Jayapura','Merauke', 'Balikpapan')
        pos_hint: {"x": 0.1, 'top': 0.3}
        size_hint: 0.3, 0.05
        font_size: "14.5sp"
        font_name: "RPoppins"
        background_color: [1, 1, 1, 0.2]
        background_normal: ''
        option_cls: Factory.get("SpinnerOpt")
        color: 1,1,1,1

    Spinner:
        id : spinner_opt2
        text: 'Select A City'
