        size_hint: 0.3, 0.05
        font_size: "14.5sp"
        font_name: "RPoppins"
        background_color: [1, 1, 1, 0.2]
        background_normal: ''
        option_cls: Factory.get("SpinnerOpt")
        color: 1,1,1,1

    FitImage:
        source: "./kv/banner.jpg"
